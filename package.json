{
  "name": "nra-monorepo",
  "private": true,
  "workspaces": [
    "apps/web"
  ],
  "scripts": {
    "dev:up": "docker compose -f ops/docker/compose.yml up -d",
    "dev:api": "bash scripts/run_api.sh",
    "dev:web": "bash scripts/run_web.sh",
    "dev": "npm run dev:up && concurrently -k -n API,WEB -c green,cyan \"npm:dev:api\" \"npm:dev:web\""
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}

